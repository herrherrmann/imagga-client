<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Button">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
    </style>

    <style name="ButtonIcon">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ButtonTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="ResultButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:paddingTop">@dimen/margin_default</item>
        <item name="android:paddingBottom">@dimen/margin_default</item>
        <item name="android:paddingLeft">@dimen/margin_big</item>
        <item name="android:paddingRight">@dimen/margin_big</item>
        <item name="android:background">@drawable/button_result</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/color_white</item>
        <!--<item name="android:drawableRight">@drawable/link_white</item>-->
        <!--<item name="android:drawablePadding">@dimen/margin_default</item>-->
    </style>

    <style name="help_headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/color_main_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="help_text">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
